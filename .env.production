# =============================================================================
# FLUXO ALFA - PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# PRODUCTION ENVIRONMENT - SECURE YOUR CREDENTIALS

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=8000
LOG_LEVEL=warn

# =============================================================================
# DATABASE CONFIGURATION (PRODUCTION)
# =============================================================================
DATABASE_URL="postgresql://production_user:production_password@production_host:5432/production_database"
REDIS_URL="redis://production_redis_host:6379"

# =============================================================================
# AUTHENTICATION & SECURITY (PRODUCTION)
# =============================================================================
# CRITICAL: Generate strong secrets with: openssl rand -base64 32
JWT_SECRET="generate-a-strong-random-secret-minimum-32-characters-for-production"
REFRESH_TOKEN_SECRET="generate-another-strong-random-secret-minimum-32-characters-prod"

# Google OAuth (Production)
GOOGLE_CLIENT_ID="your-production-google-client-id"
GOOGLE_CLIENT_SECRET="your-production-google-client-secret"
GOOGLE_REDIRECT_URI="https://api.fluxoalfa.com.br/auth/google/callback"

# =============================================================================
# PAYMENT GATEWAYS (PRODUCTION)
# =============================================================================

# --- STRIPE (Production Keys) ---
STRIPE_SECRET_KEY="sk_live_your_production_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_live_your_production_stripe_publishable_key"
STRIPE_PRICE_PRO="price_your_production_pro_plan_price_id"
STRIPE_WEBHOOK_SECRET="whsec_your_production_webhook_endpoint_secret"

# --- MERCADOPAGO (Production Keys) ---
MERCADOPAGO_ACCESS_TOKEN="APP_USR-your-production-mercadopago-access-token"
MERCADOPAGO_PUBLIC_KEY="APP_USR-your-production-mercadopago-public-key"
MERCADOPAGO_WEBHOOK_SECRET="your-production-mercadopago-webhook-secret"

# --- KIWIFY (Production Keys) ---
KIWIFY_API_TOKEN="your-production-kiwify-api-token"
KIWIFY_ACCOUNT_ID="your-production-kiwify-account-id"
KIWIFY_WEBHOOK_TOKEN="your-production-kiwify-webhook-token"
KIWIFY_PRO_PRODUCT_ID="your-production-kiwify-pro-product-id"
KIWIFY_CHECKOUT_BASE_URL="https://checkout.kiwify.com"

# =============================================================================
# AI & MACHINE LEARNING (PRODUCTION)
# =============================================================================
OPENAI_API_KEY="sk-your-production-openai-api-key"
EMBEDDING_MODEL="text-embedding-3-small"
EMBEDDING_DIM="1536"
INFERENCE_MODEL="gpt-4o-mini"

# =============================================================================
# PRICING CONFIGURATION (PRODUCTION)
# =============================================================================
PRICING_JSON='{"free":{"dailyChatLimit":5,"monthlyPrice":0,"features":["Basic Chat","5 Messages/day"]},"pro":{"dailyChatLimit":100,"monthlyPrice":36,"features":["Unlimited Chat","Priority Support","Advanced Features","Multiple Models"]}}'

# =============================================================================
# CORS & URLS (PRODUCTION)
# =============================================================================
ALLOWED_ORIGINS="https://fluxoalfa.com.br,https://admin.fluxoalfa.com.br,https://www.fluxoalfa.com.br"
USER_FRONTEND_URL="https://fluxoalfa.com.br"
ADMIN_FRONTEND_URL="https://admin.fluxoalfa.com.br"
BACKEND_URL="https://api.fluxoalfa.com.br"

# =============================================================================
# EMAIL CONFIGURATION (PRODUCTION)
# =============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-production-email@yourdomain.com"
SMTP_PASS="your-production-email-app-password"
FROM_EMAIL="noreply@fluxoalfa.com.br"

# =============================================================================
# RATE LIMITING (PRODUCTION)
# =============================================================================
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX="500"           # Higher limit for production

