# Database (Production - Replace with your production database URLs)
DATABASE_URL=postgres://production_user:production_password@production_host:5432/production_database
REDIS_URL=redis://production_redis_host:6379

# JWT Secrets (Production - Generate strong secrets)
JWT_SECRET=generate-a-strong-random-secret-minimum-32-characters-for-production
REFRESH_TOKEN_SECRET=generate-another-strong-random-secret-minimum-32-characters-prod

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Stripe (Development placeholders - replace with real keys for production)
STRIPE_SECRET_KEY=sk_test_placeholder_for_development_mode_only
STRIPE_PUBLISHABLE_KEY=pk_test_placeholder_for_development_mode_only
STRIPE_PRICE_PRO=price_placeholder_for_development_mode_only
STRIPE_WEBHOOK_SECRET=whsec_placeholder_for_development_mode_only

# AI Configuration (Add your real OpenAI API key here)
OPENAI_API_KEY=sk-placeholder_for_development_mode_only
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIM=1536
INFERENCE_MODEL=gpt-4o

# Pricing (JSON format)
PRICING_JSON={"free":{"maxChatsPerDay":10},"pro":{"maxChatsPerDay":-1}}

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Application URLs
USER_FRONTEND_URL=http://localhost:3000
ADMIN_FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:8000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
NODE_ENV=production

# Email (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@fluxoalfa.com