# =============================================================================
# FLUXO ALFA - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=8000
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/fluxo_alfa?schema=public"
REDIS_URL="redis://localhost:6379"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET="your-32-character-jwt-secret-key-here"
REFRESH_TOKEN_SECRET="your-32-character-refresh-token-secret-here"

# Google OAuth (Optional)
GOOGLE_CLIENT_ID="your-google-client-id.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:8000/auth/google/callback"

# =============================================================================
# PAYMENT GATEWAYS
# =============================================================================

# --- STRIPE (Primary Gateway) ---
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_PRICE_PRO="price_your_pro_plan_price_id"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_endpoint_secret"

# --- MERCADOPAGO (Latin America) ---
MERCADOPAGO_ACCESS_TOKEN="TEST-your-mercadopago-access-token"
MERCADOPAGO_PUBLIC_KEY="TEST-your-mercadopago-public-key"
MERCADOPAGO_WEBHOOK_SECRET="your-mercadopago-webhook-secret"

# --- KIWIFY (Brazil) ---
KIWIFY_API_TOKEN="your-kiwify-api-token"
KIWIFY_ACCOUNT_ID="your-kiwify-account-id"
KIWIFY_WEBHOOK_TOKEN="your-kiwify-webhook-token"
KIWIFY_PRO_PRODUCT_ID="your-kiwify-pro-product-id"
KIWIFY_CHECKOUT_BASE_URL="https://checkout.kiwify.com"

# =============================================================================
# AI & MACHINE LEARNING
# =============================================================================
OPENAI_API_KEY="sk-your-openai-api-key"
EMBEDDING_MODEL="text-embedding-3-small"
EMBEDDING_DIM="1536"
INFERENCE_MODEL="gpt-4o-mini"

# =============================================================================
# PRICING CONFIGURATION
# =============================================================================
# JSON format: {"free":{"dailyChatLimit":5,"features":[]},"pro":{"dailyChatLimit":100,"features":["priority_support","advanced_features"]}}
PRICING_JSON='{"free":{"dailyChatLimit":5,"monthlyPrice":0,"features":["Basic Chat","5 Messages/day"]},"pro":{"dailyChatLimit":100,"monthlyPrice":36,"features":["Unlimited Chat","Priority Support","Advanced Features","Multiple Models"]}}'

# =============================================================================
# CORS & URLS
# =============================================================================
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"
USER_FRONTEND_URL="http://localhost:3000"
ADMIN_FRONTEND_URL="http://localhost:3001"
BACKEND_URL="http://localhost:8000"

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@fluxoalfa.com"

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX="100"           # requests per window

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================
# 1. For production, change NODE_ENV to "production"
# 2. Use strong, unique secrets for JWT tokens
# 3. Configure real database and Redis URLs
# 4. Set up actual payment gateway credentials
# 5. Configure SMTP for email notifications
# 6. Update CORS origins for your domains